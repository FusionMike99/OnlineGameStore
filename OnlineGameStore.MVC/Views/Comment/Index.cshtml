@model AggregateCommentViewModel

@{
    ViewData["Title"] = "Comments";
}

<h5>Comments</h5>

<div id="modalDialog" class="modal fade" tabindex="-1">
    <div id="dialogContent" class="modal-dialog modal-dialog-centered"></div>
</div>

<comments elements="Model.Comments"
          view-action-update="@("UpdateComment")"
          view-action-remove="@("RemoveComment")"
          view-url-gameKey="@ViewContext.RouteData.Values["gameKey"]"
          view-url-return="@Context.Request.Path"/>

<partial name="_NewComment" model="Model.EditComment"/>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script src="~/lib/jquery-ajax-unobtrusive/dist/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/js/quote.js"></script>
}