@model PlatformTypeViewModel

@{
    ViewData["Title"] = $"Platform type {Model.Type}";
}

<h1>Details</h1>

<div>
    <h4>Platform type</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
    </dl>
</div>

<div class="btn-toolbar" role="toolbar" aria-label="Details genre toolbar">
    <div class="btn-group me-2" role="group" aria-label="Operation group">
        <a asp-action="Update" asp-route-platformTypeId="@Model.Id" class="btn btn-warning">Update</a>
        <form asp-action="Remove" method="post">
            <input asp-for="Id"/>
            <button type="submit" value="Remove" class="btn btn-danger">Remove</button>
        </form>
        <a asp-action="GetPlatformTypes" class="btn btn-primary">Back to List</a>
    </div>
</div>