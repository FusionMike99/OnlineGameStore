@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<h2>Register</h2>
<hr/>
<div class="col-8 mx-auto">
    <form asp-action="Register" asp-route-returnUrl="@Model.ReturnUrl">
        <div class="container">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
            <div class="my-3">
                <div class="input-group">
                    <label asp-for="Email" class="input-group-text"></label>
                    <input asp-for="Email" class="form-control"/>
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            
            <div class="my-3">
                <div class="input-group">
                    <label asp-for="UserName" class="input-group-text"></label>
                    <input asp-for="UserName" class="form-control"/>
                </div>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            
            <div class="my-3">
                <div class="input-group">
                    <label asp-for="Password" class="input-group-text"></label>
                    <input asp-for="Password" class="form-control"/>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            
            <div class="my-3">
                <div class="input-group">
                    <label asp-for="PasswordConfirm" class="input-group-text"></label>
                    <input asp-for="PasswordConfirm" class="form-control"/>
                </div>
                <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
            </div>
        </div>
        
        <div class="col-1 mx-auto">
            <input type="submit" value="Register" class="btn btn-info text-light"/>
        </div>
    </form>
</div>
