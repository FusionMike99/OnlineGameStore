@model PublisherViewModel

@{
    ViewData["Title"] = $"Publisher {Model.CompanyName}";
}

<h1>Details</h1>

<div>
    <h4>Publisher</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CompanyName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CompanyName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HomePage)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HomePage)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>

<div class="btn-toolbar" role="toolbar" aria-label="Details genre toolbar">
    <div class="btn-group me-2" role="group" aria-label="Operation group">
        <a asp-action="Update" asp-route-companyName="@Model.CompanyName" class="btn btn-warning">Update</a>
        <form asp-action="Remove" method="post">
            <input asp-for="Id" />
            <button type="submit" value="Remove" class="btn btn-danger">Remove</button>
        </form>
        <a asp-action="GetPublishers" class="btn btn-primary">Back to List</a>
    </div>
</div>
