@model EditGameViewModel

@{
    ViewData["Title"] = "Update game";
}

<h1>Update</h1>

<h4>Game</h4>
<hr/>
<div class="col-8 mx-auto">
    <form asp-route="gameUpdate" method="post" name="editGameForm">
        <partial name="_EditGame" model="@Model"/>

        <div class="col-1 mx-auto">
            <input type="submit" value="Save" class="btn btn-info text-light"/>
        </div>
    </form>
</div>

<div>
    <a asp-action="GetGames" class="btn btn-primary">Back to List</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}